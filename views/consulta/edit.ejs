<%- include ("../partials/header.ejs")%>
<title>Atualização de Consulta</title>
</head>
<body>
<div class="container">
  <h1 class="text-center">Cadastro de Consulta</h1>
  <form action="/consulta/update" method="POST">
    <div class="form-group">
      <label>Valor:</label>
      <input type="hidden" value="<%- consultas.id %>" name="id" />
      <input
        type="number"
        value="<%- consultas.valor%>"
        name="valor"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label>Data:</label>
      <input
        type="date"
        value="<%- consultas.data%>"
        name="data"
        class="form-control"
      />
    </div>

    <label for="">Dentista:</label>
    <select class="form-control" name="dentista" id="">
      <% dentistas.forEach(dentista =>{ %> <% if(consultas.dentistumId ==
      dentista.id) { %>
      <option value="<%- dentista.id %>" selected><%- dentista.nome %></option>
      <% } else { %>
      <option value="<%- dentista.id %>"><%- dentista.nome %></option>
      <% } %> <% }) %>
    </select>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>

<%- include ("../partials/footer.ejs")%>
